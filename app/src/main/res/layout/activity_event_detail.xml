<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".EventDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Toolbar -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            style="@style/CustomToolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/blue"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:paddingStart="16dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="Detail Event"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@android:color/white"/>
        </androidx.appcompat.widget.Toolbar>

        <!-- Poster Event -->
        <ImageView
            android:id="@+id/ivEventPoster"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_placeholder"
            android:layout_marginBottom="16dp" />

        <!-- Detail Event -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="18dp">

            <!-- Judul -->
            <TextView
                android:id="@+id/tvEventTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nama Event"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="16dp" />

            <!-- Tanggal -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_calendar"
                    android:tint="@color/blue"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/tvEventDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tanggal"
                    android:textSize="16sp"
                    android:textColor="@color/gray" />
            </LinearLayout>

            <!-- Waktu -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_time"
                    android:tint="@color/blue"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/tvEventTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Waktu"
                    android:textSize="16sp"
                    android:textColor="@color/gray" />
            </LinearLayout>

            <!-- Lokasi -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_location"
                    android:tint="@color/blue"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/tvEventLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lokasi"
                    android:textSize="16sp"
                    android:textColor="@color/gray" />
            </LinearLayout>

            <!-- Deskripsi -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Deksripsi"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginBottom="13dp"
                android:textColor="#333333" />
            <!-- Deskripsi -->
            <TextView
                android:id="@+id/tvEventDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Deskripsi event akan ditampilkan di sini"
                android:textSize="14sp"
                android:layout_marginBottom="24dp"
                android:textColor="@color/gray"
                android:justificationMode="inter_word"/>
        </LinearLayout>
        <!-- Tombol Daftar Event -->
        <Button
            android:id="@+id/btnRegister"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Daftar Event"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:backgroundTint="@color/blue"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:layout_marginHorizontal="16dp" />

        <!-- Tombol Unduh Poster -->
        <Button
            android:id="@+id/btnDownloadPoster"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Unduh Poster"
            android:textAllCaps="false"
            android:textColor="@color/blue"
            android:backgroundTint="@color/white"
            android:elevation="4dp"
            android:layout_marginBottom="24dp"
            android:layout_marginHorizontal="16dp" />
    </LinearLayout>
</ScrollView>
